<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheSaltyGlutton</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="salty-navbar d-flex navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse mr-auto">
                <i class="fas fa-bars"></i>
                <i class="fas fa-search"></i>
                @*<div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" />
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Search</button>
                    </div>
                </div>*@
            </div>
            <div>
                <a class="salty-logo mx-auto navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Salty Glutton</a>
            </div>
            <div class="ml-auto justify-content-end navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Reviewer Portal</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - TheSaltyGlutton - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
