<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheSaltyGlutton</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/utilities.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="salty-navbar d-flex navbar navbar-expand-md navbar-dark bg-dark border-bottom box-shadow">
            <a class="salty-logo navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Salty Glutton</a>
            <div class="navbar-collapse collapse" id="salty-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <i class="fas fa-bars fa-lg text-white p-2"></i>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-search fa-lg text-white p-2" data-toggle="ut-collapse-horizontal" data-target="salty-search"></i>
                    </li>
                    <li class="nav-item">
                        <div class="input-group">


                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="btn btn-secondary btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index">Reviewer Portal</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - TheSaltyGlutton - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/utilities.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
