<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheSaltyGlutton</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="salty-navbar d-flex navbar navbar-expand-md navbar-dark bg-dark border-bottom box-shadow">
        <a class="salty-logo navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Salty Glutton</a>
        <div class="navbar-collapse collapse" id="salty-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <i class="fas fa-bars fa-lg text-white p-2"></i>
                </li>
                <li class="nav-item">
                    <i class="fas fa-search fa-lg text-white p-2"></i>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-secondary btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index">Reviewer Portal</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav class="salty-sidebar col-2 d-none bg-light">
                @*Hidden *@
                <div class="d-block d-sm-none">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="Search website for reviews" />
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-dark btn-outline-dark">Search</button>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-block btn-secondary btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index">Reviewer Portal</a>
                        </li>
                    </ul>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <br />
                <ul class="nav flex-column">

                </ul>
            </nav>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
